<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_centerHorizontal="true"
    android:background="#90ffffff"
    android:gravity="bottom|center">

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30.0dip"
        android:clickable="true"
        android:drawableTop="@drawable/icon_idea"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/more_window_item_margin"
        android:text="文字" />

    <TextView
        android:id="@+id/tv_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30.0dip"
        android:layout_toRightOf="@id/tv_text"
        android:clickable="true"
        android:drawableTop="@drawable/icon_photo"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/more_window_item_margin"
        android:text="相册" />

    <TextView
        android:id="@+id/tv_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_photo"
        android:clickable="true"
        android:drawableTop="@drawable/icon_camera"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/more_window_item_margin"
        android:text="拍摄" />

    <TextView
        android:id="@id/tv_lbs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_text"
        android:layout_marginRight="30.0dip"
        android:clickable="true"
        android:drawableTop="@drawable/icon_lbs"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/more_window_item_margin"
        android:text="签到" />

    <TextView
        android:id="@+id/tv_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_photo"
        android:layout_marginRight="30.0dip"
        android:layout_toRightOf="@+id/tv_lbs"
        android:clickable="true"
        android:drawableTop="@drawable/icon_review"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/more_window_item_margin"
        android:text="点评" />

    <TextView
        android:id="@+id/tv_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_camera"
        android:layout_toRightOf="@id/tv_review"
        android:clickable="true"
        android:drawableTop="@drawable/icon_more"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/more_window_item_margin"
        android:text="更多" />

    <ImageView
        android:id="@+id/iv_window_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_review"
        android:layout_marginBottom="78.0dip"
        android:layout_toRightOf="@+id/tv_lbs"
        android:src="@drawable/icon_close" />
</RelativeLayout>